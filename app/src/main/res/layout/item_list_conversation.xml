<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/conversation_list_user_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/conversation_list_user_icon"
        android:layout_alignTop="@id/conversation_list_user_icon"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/conversation_list_user_icon"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/conversation_list_user_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="xxx"
            android:textColor="@color/text_color_black"/>

        <TextView
            android:id="@+id/conversation_list_user_news"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/conversation_list_user_name"
            android:layout_weight="1"
            android:text="xxx"
            android:textColor="@color/text_color_grey"/>

    </LinearLayout>

    <TextView
        android:id="@+id/conversation_list_user_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/conversation_list_user_icon"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="16:48"
        android:textColor="@color/text_color_grey"/>

</RelativeLayout>